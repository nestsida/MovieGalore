
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie List </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .privacybackground {
            background-image: url("/Images/flower2.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            background-size: 100%;
            height: 100vh;
        }
    </style>
</head>

@model Movies

<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Release Date</th>
        <th>Price</th>
        <th>Rating</th>

    </tr>
    <tr>
        <td>@Model.ID</td>
        <td>@Model.Name</td>
        <td>@Model.ReleaseDate</td>
        <td>@Model.Price</td>
        <td>@Model.Rating</td>

    </tr>

</table>
<div style="display: block">
    <a href="/Movies/UpdateMovie/@Model.ID">Update this Movie</a>
</div>
<div style="display: block">
    @using (Html.BeginForm("DeleteMovie", "Movie", "Post"))
    {
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>
